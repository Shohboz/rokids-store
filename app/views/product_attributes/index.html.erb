<h2 class="header">Список product_attributes</h2>

<table class="bordered">
  <thead>
    <tr>
      <th>Value</th>
      <th>Price</th>
      <th>Title</th>
      <th>Product title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_attributes.each do |product_attribute| %>
      <tr>
        <td><%= product_attribute.value %></td>
        <td><%= product_attribute.price %></td>
        <td><%= product_attribute.title %></td>
        <td><%= product_attribute.product.title %></td>
        <td><%= link_to 'Show', product_attribute %></td>
        <td><%= link_to 'Edit', edit_product_attribute_path(product_attribute) %></td>
        <td><%= link_to 'Destroy', product_attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>

<%= link_to 'Новый атрибут продукта', new_product_attribute_path, class: "btn btn-large red accent-2 waves-effect waves-light" %>

