<h1>Listing line_item_attributes</h1>

<table>
  <thead>
    <tr>
      <th>Product attribute</th>
      <th>Line item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_item_attributes.each do |line_item_attribute| %>
      <tr>
        <td><%= line_item_attribute.product_attribute %></td>
        <td><%= line_item_attribute.line_item %></td>
        <td><%= link_to 'Show', line_item_attribute %></td>
        <td><%= link_to 'Edit', edit_line_item_attribute_path(line_item_attribute) %></td>
        <td><%= link_to 'Destroy', line_item_attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

