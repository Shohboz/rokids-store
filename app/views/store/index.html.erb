<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<div class="row">
	<% @products.each do |product| %>
		<div class="col s12 m4">
		  <div class="card small hoverable card-image waves-effect waves-block waves-light">
		  	<%= link_to store_show_path(product.id) do %>
			    <div class="card-image">
			      <!-- image_tag product.image_url -->
			      <div class="product-image" style="background-image: url('<%= product.image_url %>')"></div>
			    </div>
		    <% end %>
		    <div class="card-action">
		      <%= link_to product.title, store_show_path(product.id) %>
		      <span class="price showcase"><%= number_to_currency(product.price, :precision => (product.price.round == product.price) ? 0 : 2) %></span>
		    </div>
		  </div>
		</div>
	<% end %>
</div>