<p id="notice"><%= notice %></p>

<% breadcrumb :store, @product %>

<div class="row" style="padding-top: 50px;">
  <div class="row">
    <div class="col l8 m8">
      <div class="col l12 m12">
        <%= image_tag(@product.image_url, class: "materialboxed hoverable", width: "400") %>
      </div>
    </div>
    <div class="col l4 m4">
      <div class="card-panel white">
        <div style="padding: 0.5rem;">

          <%= form_for(@product, method: :post, remote: true, url: line_items_path(product_id: @product)) do |f| %>

            <ul>
              <li>
                <h5>
                  <%= @product.title %>
                </h5>
                <label>Артикул</label>
                </p>
              </li>
            </ul>

            <br>

            <label>Цена:</label>

            <h5 class="price">
              <%= number_to_currency(@product.price, :precision => (@product.price.round == @product.price) ? 0 : 2) %>
            </h5>

            <br>

            <div class="input-field col s12" style="margin-bottom: 10px;">
              <%= select_tag :quantity, options_for_select((1..5).step(1).to_a.map{|s| ["#{s}", s]}) %>
              <label>Количество:</label>
            </div>

            <%= link_to 'Добавить в корзину', '#', class: "btn btn-large red accent-2 waves-effect waves-light modal-trigger", onclick: "$('form').submit()" %>
            
            <%= f.submit nil, style: "display: none;" %>
            
          <% end %>

        </div>

      </div>
    </div>
  </div>

  <ul class="collection with-header">
    <li class="collection-header">
      <div class="section">
        <h5>Информация о товаре</h5>
      </div>
    </li>

    <li class="collection-item">
      <%= sanitize @product.description %>
    </li>
  </ul>
</div>

<%= render partial: 'modal' %>

<script type="text/javascript">
  $(document).ready(function() {
    $('.modal-trigger').on('click', function(){
      //Materialize.toast('Добавлено в корзину!', 4000);
      $('#modal-decide-view').openModal();
    });

    if (!$('select').hasClass('initialized')){
      $('select').material_select();
    }
  });
</script>