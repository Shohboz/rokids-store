<p id="notice"><%= notice %></p>

<% breadcrumb :store, @product %>

<div class="row" style="padding-top: 50px;">
  <div class="row">
    <div class="col l8 m8">
      <div class="col l12 m12">
        <%= image_tag(@product.image_url, class: "materialboxed hoverable", width: "400") %>
      </div>
    </div>
    <div class="col l4 m4">
      <div class="card-panel white">
        <div style="padding: 0.5rem;">

          <ul>
            <li>
              <h5>
                <%= @product.title %>
              </h5>
              <label>Артикул</label>
              </p>
            </li>
          </ul>

          <br>

          <label>Цена:</label>

          <h5 class="price">
            <%= number_to_currency(@product.price, :precision => (@product.price.round == @product.price) ? 0 : 2) %>
          </h5>

          <br>
          
          <div class="input-field col s12" style="margin-bottom: 10px;">
            <select>
              <option value="" disabled selected>Выберите значение</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
            </select>
            <label>Количество:</label>
          </div>

          <%= link_to 'Добавить в корзину', line_items_path(product_id: @product), class: "btn btn-large red accent-2 waves-effect waves-light modal-trigger", method: :post, remote: true %>

        </div>

      </div>
    </div>
  </div>

  <ul class="collection with-header">
    <li class="collection-header">
      <div class="section">
        <h5>Информация о товаре</h5>
      </div>
    </li>

    <li class="collection-item">
      <%= sanitize @product.description %>
    </li>
  </ul>
</div>


<!-- Modal Structure -->
<div id="modal-decide-view" class="modal">
  <div class="modal-header" style="margin-top: 5px;">
    <a href="#!" class="right modal-action modal-close waves-effect waves-green btn-flat">
      <i class="fa fa-times"></i>
    </a>
  </div>
  <div class="modal-content">
    <h4>Товар добавлен в корзину</h4>

    <div class="container" style="margin-top: 20px;">
      <div class="row">
        <div class="col l6 m6">
          <div class="col l12 m12">
            <%= image_tag(@product.image_url, height: 200) %>
          </div>
        </div>
        <div class="col l6 m6">
          <div style="padding: 0.5rem;">
            <ul>
              <li>
                <h5>
                  <%= @product.title %>
                </h5>
                <label>Артикул</label>
                </p>
              </li>
            </ul>

            <label>Цена:</label>

            <h5 class="price">
              <%= number_to_currency(@product.price, :precision => (@product.price.round == @product.price) ? 0 : 2) %>
            </h5>
          </div>
        </div>
      </div>
    </div>
      
    <div class="row">
      <%= link_to 'В каталог', store_path, style: "margin-left: 4%;", class: "col m3 l3 btn btn-large cyan lighten-1 waves-effect waves-light" %>
      <%= link_to 'Оформить заказ', new_order_path, class: "col m3 l3 offset-l1 btn btn-large cyan lighten-1 waves-effect waves-light" %>
      <%= link_to 'В корзину', @cart, class: "col m3 l3 offset-l1 btn btn-large cyan lighten-1 waves-effect waves-light" %>
    </div>
  </div>
</div>


<script type="text/javascript">
  $(document).ready(function() {
    $('.modal-trigger').on('click', function(){
      //Materialize.toast('Добавлено в корзину!', 4000);
      $('#modal-decide-view').openModal();
    });

    if (!$('select').hasClass('initialized')){
      $('select').material_select();
    }
  });
</script>