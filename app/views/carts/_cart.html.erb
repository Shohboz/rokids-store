<h4>Корзина</h4>
<table class="striped">
	<%= render @cart.line_items %>

	<tr class="total_line">
		<td>
			<%= link_to 'Очистить корзину', @cart, class: "btn btn-large cyan lighten-2 waves-effect waves-light", method: :delete, remote: true %>
		</td>
		<td>Итог</td>
		<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
	</tr>
</table>