<div id="cart">
	<h4>Корзина</h4>
	<br>
	<table class="striped">
		<% if @cart.line_items.length.zero? %>
			<tr>
				<td>
					Корзина пуста
				</td>
			</tr>
			<tr>
				<td>
					<%= link_to 'В каталог', store_path, class: "btn btn-large cyan lighten-1 waves-effect waves-light" %>
				</td>
			</tr>
		<% else %>
			<%= render @cart.line_items %>
			<tr class="total_line">
				<td>
					<%= link_to 'Оформить заказ', new_order_path, class: "btn btn-large cyan lighten-1 waves-effect waves-light" %>
					<%= link_to 'Очистить корзину', @cart, class: "btn btn-large btn-flat waves-effect waves-light", method: :delete, remote: true %>
				</td>
				<td>Итог</td>
				<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
			</tr>
		<% end %>
	</table>
</div>