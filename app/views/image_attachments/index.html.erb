<h2 class="header">Список image_attachment</h2>

<table class="bordered">
  <thead>
    <tr>
      <th>Product</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_attachments.each do |image_attachment| %>
      <tr>
        <td><%= image_attachment.product_id %></td>
        <td><%= image_attachment.image %></td>
        <td><%= link_to 'Show', image_attachment %></td>
        <td><%= link_to 'Edit', edit_image_attachment_path(image_attachment) %></td>
        <td><%= link_to 'Destroy', image_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>

<%= link_to 'Новое изображение', new_image_attachment_path, class: "btn btn-large red accent-2 waves-effect waves-light" %>

