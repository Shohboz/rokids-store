<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h4 class="header">Проблемы возникли со следующими полями:</h4>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Ваше ФИО (фамилия, имя и отчество)" %><br>
    <%= f.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= f.label "Адрес доставки" %><br>
    <%= f.text_area :address %>
  </div>
  <br>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, type: "email", class: "validate" %>
  </div>
  <br>
  <br>

  <%= link_to 'Создать заявку', '#', class: "btn btn-large red accent-2 waves-effect waves-light", onclick: "$('form').submit()" %>
  <%= f.submit nil, style: "display: none;" %>

  <br>
  <br>

<% end %>
